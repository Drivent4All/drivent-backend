{
  "name": "drint.t-back",
  "version": "1.0.0",
  "description": "Back-end for Driven.t, an event management solution.",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc -p tsconfig.build.json",
    "prepare": "husky install",
    "start": "node dist/src/server.js",
    "devex": "npx nodemon ./src/server.ts",
    "migration:run": "prisma migrate deploy",
    "migration:generate": "npm run dev:load-envs prisma migrate dev",
    "lint": "eslint .",
    "lint:staged": "lint-staged",
    "test": "NODE_ENV=test jest --passWithNoTests --runInBand",
    "test:coverage": "NODE_ENV=test jest --passWithNoTests --runInBand --coverage --collectCoverageFrom='./src/**'",
    "test:migration:run": "npm run test:load-envs prisma migrate deploy",
    "test:migration:generate": "npm run test:load-envs prisma migrate dev",
    "test:watch": "jest --watch --passWithNoTests --runInBand",
    "test:load-envs": "dotenv -e .env.test",
    "test:seed": "npm run test:load-envs prisma db seed",
    "dev:load-envs": "dotenv -e .env.development",
    "dev:migration:run": "npm run dev:load-envs prisma migrate deploy",
    "dev:migration:generate": "npm run dev:load-envs prisma migrate dev",
    "dev:seed": "npm run dev:load-envs prisma db seed",
    "dev": "NODE_ENV=development nodemon --watch 'src/' --exec 'ts-node -r tsconfig-paths/register ./src/server.ts' -e ts"
  },
  "keywords": [
    "driven.t",
    "back-end",
    "typescript",
    "driven",
    "postgres",
    "express",
    "nodejs"
  ],
  "author": "Alexandre Nunes",
  "license": "ISC",
  "prisma": {
    "seed": "npm run dev:load-envs -- ts-node prisma/seed.ts"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.3.1",
    "@prisma/client": "^4.7.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^14.18.2",
    "@types/superagent": "^4.1.10",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "dotenv-cli": "^5.1.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-boundaries": "^3.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "git-commit-msg-linter": "^4.5.0",
    "husky": "^8.0.2",
    "jest": "^26.6.3",
    "lint-staged": "^12.5.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "prisma": "^3.15.2",
    "supertest": "^6.3.3",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^3.14.1",
    "ttypescript": "^1.5.15",
    "typescript": "^4.9.4",
    "typescript-transform-paths": "^2.2.3"
  },
  "dependencies": {
    "-": "^0.0.1",
    "@brazilian-utils/brazilian-utils": "^1.0.0-rc.12",
    "@types/axios": "^0.14.0",
    "@types/redis": "^4.0.11",
    "axios": "^1.2.1",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "D": "^1.0.0",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^8.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "http-status": "^1.5.3",
    "joi": "^17.7.0",
    "jsonwebtoken": "^8.5.1",
    "redis": "^4.5.1",
    "reflect-metadata": "^0.1.13"
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Drivent4All/drivent-backend.git"
  },
  "bugs": {
    "url": "https://github.com/Drivent4All/drivent-backend/issues"
  },
  "homepage": "https://github.com/Drivent4All/drivent-backend#readme"
}
